@model IEnumerable<SazBaki.Models.Gallery>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-secondary" })
</p>
<table class="table">
    <tr>
        <th>
            <h4>Image</h4>
        </th>
        <th style="width:200px;">
            <h4>Text on Image</h4>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <div style="width:200px; height:100px; overflow:hidden;">
                <img src="~/Uploads/@item.gallery_img" style="width:100%;" />
            </div>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.gallery_img_name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @class = "btn btn-success" })
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
