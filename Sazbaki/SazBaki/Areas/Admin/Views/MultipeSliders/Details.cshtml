@model SazBaki.Models.MultipeSlider

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div>    
    <dl class="dl-horizontal">
        <dt>
           Logo
        </dt>

        <dd style="width:100px;">
            <img src="~/Uploads/@Html.DisplayFor(model => model.mp_logo_img)" alt="Alternate Text" />
        </dd>

        <dt>
            Image
        </dt>

        <dd style="width:400px;">
            <img src="~/Uploads/@Html.DisplayFor(model => model.mp_img)" alt="Alternate Text"  style="width:100%;"/>
        </dd>

        <dt>
            Text in Image
        </dt>

        <dd>
            @Html.DisplayFor(model => model.mp_text)
        </dd>

        <dt>
            Language
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Language.language1)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-success" }) 
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
</p>
