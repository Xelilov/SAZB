@model SazBaki.Models.Gallery

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Image
        </dt>

        <dd style="width:400px; overflow:hidden;">
            <img src="~/Uploads/@Html.DisplayFor(model => model.gallery_img)" alt="Alternate Text" style="width:100%;" />
        </dd>

        <dt>
            Text on Image
        </dt>

        <dd>
            @Html.DisplayFor(model => model.gallery_img_name)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-success" })
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
</p>
