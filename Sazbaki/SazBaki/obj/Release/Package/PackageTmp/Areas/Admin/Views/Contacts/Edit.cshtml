@model SazBaki.Models.Contact

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Contact</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <h6>Contact Phone</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.contact_phone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.contact_phone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h6>Contact Email</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.contact_email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.contact_email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h6>Contact Adress</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.contact_adres, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.contact_adres, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
